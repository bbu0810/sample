<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developer.android.picvox.MainActivity">

    <ImageView
        android:id="@+id/logo_imageview"
        android:layout_width="313dp"
        android:layout_height="260dp"
        android:background="@drawable/logo2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/scan_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/scan_button"
        android:layout_below="@+id/logo_imageview"
        android:layout_alignLeft="@+id/visit_button"
        android:layout_alignStart="@+id/visit_button"
        android:layout_marginTop="38dp" />

    <Button
        android:id="@+id/visit_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/scan_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/visit_website" />


</RelativeLayout>
