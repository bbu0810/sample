<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developer.android.picvox.HomeActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/logo3" />

    <ImageView
        android:id="@+id/picvox_image"
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/logo"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/picvox_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/play_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/play" />

        <Button
            android:id="@+id/stop_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/stop" />

        <Button
            android:id="@+id/pause_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/pause" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/linearLayout2">

        <Button
            android:id="@+id/www_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/www" />

        <Button
            android:id="@+id/fb_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/facebook" />

        <Button
            android:id="@+id/twitter_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/twitter" />

        <Button
            android:id="@+id/itunes_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/itunes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp">

        <Button
            android:id="@+id/save_button"

            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/save" />

        <Button
            android:id="@+id/home_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/home" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/picvox_image"
        android:layout_alignStart="@+id/picvox_image"
        android:layout_below="@+id/picvox_image"
        android:layout_alignRight="@+id/picvox_image"
        android:layout_alignEnd="@+id/picvox_image" />


</RelativeLayout>
